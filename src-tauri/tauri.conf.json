{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nikon-framer",
  "version": "2.0.1",
  "identifier": "com.tauri-app.nikon-framer",
  "build": {
    "beforeDevCommand": "npm run dev --prefix src",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build --prefix src",
    "frontendDist": "../src/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "nikon-framer",
        "minWidth": 1000,
        "minHeight": 700,
        "decorations": false, 
        "transparent": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/**/*" 
    ]
  }
}
